{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "3DTILES_batch_table_hierarchy.schema.json",
    "title": "3DTILES_batch_table_hierarchy extension",
    "type": "object",
    "description": "3D Tiles extension for representing metadata hierarchies.",
    "allOf": [
        {
            "$ref": "tilesetProperty.schema.json"
        }
    ],
    "properties": {
        "classes": {
            "type": "array",
            "items": {
                "type": "object",
                "allOf": [
                    {
                        "$ref": "tilesetProperty.schema.json"
                    }
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "length": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "instances": {
                        "type": "object",
                        "additionalProperties": {
                            "$ref": "#/definitions/property"
                        }
                    },
                    "extensions": {},
                    "extras": {}
                },
                "required": [
                    "name",
                    "length",
                    "instances"
                ]
            }
        },
        "instancesLength": {
            "type": "integer",
            "minimum": 0
        },
        "classIds": {
            "$ref": "#/definitions/integerProperty"
        },
        "parentCounts": {
            "$ref": "#/definitions/integerProperty"
        },
        "parentIds": {
            "$ref": "#/definitions/integerProperty"
        },
        "extensions": {},
        "extras": {}
    },
    "definitions": {
        "binaryBodyReference": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "tilesetProperty.schema.json"
                }
            ],
            "properties": {
                "byteOffset": {
                    "type": "integer",
                    "minimum": 0
                },
                "componentType": {
                    "type": "string",
                    "enum": [
                        "BYTE",
                        "UNSIGNED_BYTE",
                        "SHORT",
                        "UNSIGNED_SHORT",
                        "INT",
                        "UNSIGNED_INT",
                        "FLOAT",
                        "DOUBLE"
                    ]
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "SCALAR",
                        "VEC2",
                        "VEC3",
                        "VEC4"
                    ]
                },
                "extensions": {},
                "extras": {}
            },
            "required": [
                "byteOffset",
                "componentType",
                "type"
            ]
        },
        "property": {
            "anyOf": [
                {
                    "$ref": "#/definitions/binaryBodyReference"
                },
                {
                    "type": "array"
                }
            ]
        },
        "integerArray": {
            "type": "array",
            "items": {
                "type": "integer",
                "minimum": 0
            }
        },
        "integerBinaryBodyReference": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "tilesetProperty.schema.json"
                }
            ],
            "properties": {
                "byteOffset": {
                    "type": "integer",
                    "minimum": 0
                },
                "componentType": {
                    "type": "string",
                    "enum": [
                        "UNSIGNED_BYTE",
                        "UNSIGNED_SHORT",
                        "UNSIGNED_INT"
                    ]
                },
                "extensions": {},
                "extras": {}
            },
            "required": [
                "byteOffset"
            ]
        },
        "integerProperty": {
            "anyOf": [
                {
                    "$ref": "#/definitions/integerBinaryBodyReference"
                },
                {
                    "$ref": "#/definitions/integerArray"
                }
            ]
        }
    },
    "required": [
        "classes",
        "instancesLength",
        "classIds"
    ]
}