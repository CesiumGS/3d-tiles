{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "bufferView.schema.json",
    "title": "Buffer View",
    "$ref": "subtreeProperty.schema.json",
    "description": "A contiguous subset of a buffer",
    "properties": {
        "buffer": {
            "type": "integer",
            "minimum": 0,
            "description": "The index of the buffer."
        },
        "byteOffset": {
            "type": "integer",
            "minimum": 0,
            "description": "The offset into the buffer in bytes."
        },
        "byteLength": {
            "type": "integer",
            "minimum": 1,
            "description": "The total byte length of the buffer view."
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "description": "The name of the `bufferView`."
        }
    },
    "required": [
        "buffer",
        "byteOffset",
        "byteLength"
    ]
}